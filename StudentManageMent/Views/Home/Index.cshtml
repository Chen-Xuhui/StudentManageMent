@model IEnumerable<Student>
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "学生列表页";
}

<div class="card-deck">
    @foreach (var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/2.jpg" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@student.Id" class="btn btn-primary m-1">查看</a>
                <a href="#" class="btn btn-primary m-1">返回</a>
                <a href="#" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>
            </div>
        </div>
    }

</div>